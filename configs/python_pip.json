{
  "version": "1.0.0",
  "tools": [
    {
      "id": "pip2",
      "name": "Python 2 pip",
      "description": "Python 2 包管理器 (pip2)",
      "detection": {
        "command": "pip2",
        "arguments": [
          "--version"
        ],
        "fallbackDetection": {
          "type": "file",
          "path": "~/.pip/pip.conf"
        }
      },
      "sources": [
        {
          "id": "pip2-official",
          "name": "官方源",
          "url": "https://pypi.org/simple",
          "description": "PyPI 官方源"
        },
        {
          "id": "pip2-tsinghua",
          "name": "清华大学",
          "url": "https://pypi.tuna.tsinghua.edu.cn/simple",
          "description": "清华大学 TUNA 镜像",
          "region": "CN"
        },
        {
          "id": "pip2-aliyun",
          "name": "阿里云",
          "url": "https://mirrors.aliyun.com/pypi/simple/",
          "description": "阿里云镜像",
          "region": "CN"
        },
        {
          "id": "pip2-tencent",
          "name": "腾讯云",
          "url": "https://mirrors.cloud.tencent.com/pypi/simple",
          "description": "腾讯云镜像",
          "region": "CN"
        },
        {
          "id": "pip2-huawei",
          "name": "华为云",
          "url": "https://mirrors.huaweicloud.com/repository/pypi/simple",
          "description": "华为云镜像",
          "region": "CN"
        },
        {
          "id": "pip2-douban",
          "name": "豆瓣",
          "url": "https://pypi.douban.com/simple",
          "description": "豆瓣镜像",
          "region": "CN"
        },
        {
          "id": "pip2-ustc",
          "name": "中科大",
          "url": "https://pypi.mirrors.ustc.edu.cn/simple",
          "description": "中科大 USTC 镜像",
          "region": "CN"
        },
        {
          "id": "pip2-sjtu",
          "name": "上海交大",
          "url": "https://mirrors.sjtug.sjtu.edu.cn/pypi/simple",
          "description": "上海交通大学 SJTUG 镜像",
          "region": "CN"
        },
        {
          "id": "pip2-zju",
          "name": "浙江大学",
          "url": "https://mirrors.zju.edu.cn/pypi/simple",
          "description": "浙江大学 ZJU 镜像",
          "region": "CN"
        }
      ],
      "strategy": {
        "type": "keyvalue",
        "filePath": "~/.pip/pip.conf",
        "set": {
          "key": "index-url",
          "value": "{{url}}",
          "separator": "=",
          "comment": "[global]",
          "ensureStructure": {
            "createIfMissing": true,
            "createParentDirectories": true,
            "defaultStructure": "[global]\nindex-url={{url}}\ntrusted-host={{domain}}"
          }
        },
        "get": {
          "key": "index-url",
          "separator": "="
        }
      },
      "backup": {
        "filePath": "~/.pip/pip.conf",
        "backupFileName": "pip.conf.backup",
        "backupOriginal": true
      },
      "metadata": {
        "supportedPlatforms": [
          "macOS",
          "linux",
          "windows"
        ],
        "supportsSpeedTest": true,
        "documentationURL": "https://pip.pypa.io/"
      }
    },
