{
  "version": "1.0.0",
  "tools": [
    {
      "id": "brew",
      "name": "Homebrew",
      "description": "macOS 包管理器",
      "detection": {
        "command": "brew",
        "arguments": [
          "--version"
        ]
      },
      "sources": [
        {
          "id": "brew-official",
          "name": "官方源",
          "url": "https://ghcr.io/v2/homebrew/core",
          "description": "Homebrew 官方源（GitHub Containers）"
        },
        {
          "id": "brew-tuna",
          "name": "清华 TUNA",
          "url": "https://mirrors.tuna.tsinghua.edu.cn/homebrew-bottles/bottles",
          "description": "清华大学镜像",
          "region": "CN"
        },
        {
          "id": "brew-ustc",
          "name": "中科大 USTC",
          "url": "https://mirrors.ustc.edu.cn/homebrew-bottles/bottles",
          "description": "中科大镜像",
          "region": "CN"
        },
        {
          "id": "brew-sjtu",
          "name": "上海交大 SJTUG",
          "url": "https://mirrors.sjtug.sjtu.edu.cn/homebrew-bottles/bottles",
          "description": "上海交通大学镜像",
          "region": "CN"
        },
        {
          "id": "brew-zju",
          "name": "浙江大学 ZJU",
          "url": "https://mirrors.zju.edu.cn/homebrew-bottles/bottles",
          "description": "浙江大学镜像",
          "region": "CN"
        },
        {
          "id": "brew-aliyun",
          "name": "阿里云",
          "url": "https://mirrors.aliyun.com/homebrew/homebrew-bottles/bottles",
          "description": "阿里云镜像",
          "region": "CN"
        },
        {
          "id": "brew-tencent",
          "name": "腾讯云",
          "url": "https://mirrors.cloud.tencent.com/homebrew-bottles/bottles",
          "description": "腾讯云镜像",
          "region": "CN"
        },
        {
          "id": "brew-163",
          "name": "网易163",
          "url": "https://mirrors.163.com/homebrew/homebrew-bottles/bottles",
          "description": "网易163镜像",
          "region": "CN"
        }
      ],
      "strategy": {
        "type": "command",
        "set": {
          "command": "brew",
          "arguments": [
            "config",
            "set",
            "HOMEBREW_BOTTLE_DOMAIN",
            "{{url}}"
          ]
        },
        "get": {
          "command": "brew",
          "arguments": [
            "config",
            "get",
            "HOMEBREW_BOTTLE_DOMAIN"
          ],
          "outputParser": "trim"
        }
      },
      "backup": {
        "filePath": "~/.zshrc",
        "backupFileName": ".zshrc.brew.backup",
        "backupOriginal": true
      },
      "postSwitchActions": [
        {
          "type": "command",
          "command": "brew",
          "arguments": [
            "update"
          ]
        }
      ],
      "metadata": {
        "supportedPlatforms": [
          "macOS",
          "linux"
        ],
        "supportsSpeedTest": true,
        "documentationURL": "https://docs.brew.sh/"
      }
    }
  ]
}
